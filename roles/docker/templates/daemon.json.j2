{
	"exec-opts": ["native.cgroupdriver=systemd"],
	"log-driver": "json-file",
	"log-opts": {
		"max-size": "100m"
	},
	"tls": true,
	"tlsverify": true,
	"tlscacert": "{{ docker.dir.ssl }}/{{ docker.cert.files.ca }}",
	"tlscert": "{{ docker.dir.ssl }}/{{ docker.cert.files.crt }}",
	"tlskey": "{{ docker.dir.ssl }}/{{ docker.cert.files.key }}",
	"metrics-addr" : "0.0.0.0:{{ docker.port.metrics }}",
	"experimental" : true,
	"storage-driver": "overlay2",
	"storage-opts": [
		"overlay2.override_kernel_check=true"
	]
}
